<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Pet Star Hotel</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <!--This bundle was moved by the Telerik VS Extensions for compatibility reasons-->
    @Scripts.Render("~/bundles/jquery")
    <link href="@Url.Content("~/Content/kendo/2014.2.1008/kendo.common.min.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/kendo/2014.2.1008/kendo.mobile.all.min.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/kendo/2014.2.1008/kendo.dataviz.min.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/kendo/2014.2.1008/kendo.default.min.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/kendo/2014.2.1008/kendo.dataviz.default.min.css")" rel="stylesheet" type="text/css" />
    <script src="@Url.Content("~/Scripts/kendo/2014.2.1008/jquery.min.js")"></script>
    <script src="@Url.Content("~/Scripts/kendo/2014.2.1008/kendo.all.min.js")"></script>
    <script src="@Url.Content("~/Scripts/kendo/2014.2.1008/kendo.aspnetmvc.min.js")"></script>
    <script src="@Url.Content("~/Scripts/kendo.modernizr.custom.js")"></script>
</head>
<body>
    <div class="logo">
    </div>
    <div class="navbar navbar-default navbar-fixed-top nbc">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <h3>@Html.ActionLink("Pet Hotel", "Index", "Home", null, new { @class = "heading" })</h3>

            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav ulcl">
                    <li>@Html.ActionLink("Home", "Index", "Home", null, new { id = "n1", })</li>
                    <li>@Html.ActionLink("Prices", "prices", "Reservation", null, new { id = "n4" })</li>
                    <li>@Html.ActionLink("Reservations", "Index", "Reservation", null, new { id = "n4" })</li>
                    <li>@Html.ActionLink("About", "About", "Home", null, new { id = "n2" })</li>
                    <li>@Html.ActionLink("Contact", "Contact", "Home", null, new { id = "n3" })</li>
                </ul>
            </div>
        </div>
    </div>
    <div class="banner">
        <img src="~/Images/banner.jpg" height="250" width="1000" />
    </div>
    <div class="container body-content">
        @RenderBody()
        @RenderSection("book", required: false)
    </div>
    <div>


    </div>
    <br />
    <br />
    <div>

        <footer>
            <div>
                <h3>&copy; @DateTime.Now.Year - Pet Star Hotel</h3>
            </div>
        </footer>

    </div>

    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
